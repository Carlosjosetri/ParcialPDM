<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/background"
                tools:context="com.example.parcialpmd.fragments.login">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"

            android:layout_alignParentStart="true" android:layout_marginStart="235dp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
        >


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_matchs"
                    android:layout_width="match_parent"
                    android:layout_height="243dp"/>


        </LinearLayout>


    </ScrollView>
    <ImageView
            android:src="@mipmap/logo_noshadow"
            android:layout_width="107dp"
            android:layout_height="99dp" android:layout_alignParentStart="true"
            android:layout_marginStart="88dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:id="@+id/imageView2" android:layout_marginTop="37dp" android:layout_marginLeft="88dp"/>
    <TextView
            android:text="Your Matchs"
            android:layout_width="172dp"
            android:layout_height="84dp" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="451dp"
            android:id="@+id/textView" android:layout_marginTop="177dp" android:layout_marginRight="451dp"
            android:gravity="center"
            android:textColor="@color/blue"
            android:autoText="false" app:autoSizeTextType="uniform"/>
    <Button
            android:text="New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="378dp"
            android:id="@+id/butnew" android:layout_marginTop="198dp" android:layout_marginRight="378dp"
            android:background="@drawable/btnsignup_gradient"

            android:textColor="#FFFFFF"/>

</RelativeLayout>